                            <img src="@cdn/img_snier/vistas/creditos.png" class="rounded-circle me-3" width="60"
                                height="60" alt="Testimonial" loading="lazy">
                            <div>
                                <h5 class="mb-0">Carlos Ruiz</h5>
                                <small class="text-muted">CEO, Energía Verde MX</small>
                            </div>
                        </div>
