                        <div class="stats-number">1.2M</div>
                        <div class="stats-label text-white">Variables procesadas</div>
                    </div>
                </div>
                <div class="col-md-3" data-aos="fade-up" data-aos-delay="300">
                    <div class="stats-item">
                        <div class="stats-number">24/7</div>
                        <div class="stats-label text-white">Actualización de datos</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="section bg-white" id="features">
        <div class="container">
            <div class="text-center mb-5">
