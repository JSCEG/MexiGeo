@{
    ViewData["Title"] = "MexiGeo - Plataforma de Inteligencia Energética";
    Layout = null;
    var cdn = "https://cdn.sassoapps.com";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta name="description" content="Plataforma geoespacial con IA para análisis predictivo de datos energéticos">

    <!-- Preload de recursos críticos -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        as="style" onload="this.onload=null;this.rel='stylesheet'">
    <link rel="preload" href="@cdn/logos/Logo_mexigeo.png" as="image">
    <link rel="preload" href="@cdn/video/Login_mexigeo.mp4" as="video" type="video/mp4">

    <!-- Bootstrap 5.3 + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- AOS Animation -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <!-- Google Fonts -->
    <noscript>
        <link rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap">
    </noscript>

    <link rel="stylesheet" href="~/css/mexigeo-theme.css">

    <style>
        :root {
            --mexigeo-primary: #F28C74;
            --mexigeo-primary-dark: #e67a5f;
            --mexigeo-success: #54C25F;
            --mexigeo-info: #4C6EF5;
            --mexigeo-purple: #8E44AD;
            --mexigeo-text-dark: #2D3748;
            --mexigeo-text-muted: #718096;
            --mexigeo-overlay: rgba(13, 19, 33, 0.85);
        }

        html {
            -webkit-text-size-adjust: 100%;
            text-size-adjust: 100%;
        }

        body {
            font-family: 'Poppins', sans-serif;
            color: var(--mexigeo-text-dark);
            overflow-x: hidden;
            text-rendering: optimizeLegibility;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            line-height: 1.6;
        }

        /* Video Background */
        #video-bg {
            position: fixed;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            transform: translate(-50%, -50%);
            object-fit: cover;
            z-index: -2;
            opacity: 0.7;
            background: #0d132119;
        }

        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--mexigeo-overlay);
            z-index: -1;
        }

        .video-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            @* background: linear-gradient(rgba(13, 19, 33, 0.92),
                    rgba(13, 19, 33, 0.85)); *@
            z-index: 1;
        }

        /* Navbar */
        .navbar {
            background-color: rgba(13, 22, 38, 0.95);
            backdrop-filter: blur(10px);
            padding: 1rem 0;
            transition: all 0.3s ease;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1030;
        }

        .navbar.scrolled {
            padding: 0.5rem 0;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.2);
        }

        .navbar-collapse {
            background-color: rgba(13, 22, 38, 0.98);
            padding: 1rem;
            margin-top: 0.5rem;
            border-radius: 8px;
        }

        @@media (min-width: 992px) {
            .navbar-collapse {
                background-color: transparent;
                padding: 0;
                margin-top: 0;
            }
        }

        .nav-link {
            font-weight: 500;
            margin: 0 0.5rem;
            position: relative;
            color: rgba(255, 255, 255, 0.9);
        }

        .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background: var(--mexigeo-primary);
            transition: width 0.3s ease;
        }

        .nav-link:hover::after,
        .nav-link.active::after {
            width: 100%;
        }

        /* Custom Tab Styles */
        .nav-tabs {
            border-bottom: 2px solid rgba(142, 68, 173, 0.1);
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .nav-tabs .nav-item {
            margin-bottom: -2px;
        }

        .nav-tabs .nav-link {
            color: var(--mexigeo-text-muted, #718096);
            border: none;
            border-bottom: 2px solid transparent;
            padding: 0.75rem 1.25rem;
            font-weight: 500;
            transition: all 0.3s ease;
            position: relative;
        }

        /* Inactive tab hover effect */
        .nav-tabs .nav-link:hover:not(.active) {
            color: var(--mexigeo-primary, #F28C74);
            border-color: rgba(242, 140, 116, 0.4);
            background-color: rgba(242, 140, 116, 0.05);
        }

        /* Active tab styles */
        .nav-tabs .nav-link.active {
            color: var(--mexigeo-purple, #8E44AD);
            background-color: transparent;
            border-bottom: 2px solid var(--mexigeo-purple, #8E44AD);
            font-weight: 600;
        }

        /* Add subtle indicator for clickable tabs */
        .nav-tabs .nav-link:not(.active)::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 0;
            height: 2px;
            background-color: var(--mexigeo-primary, #F28C74);
            transition: all 0.3s ease;
            transform: translateX(-50%);
        }

        .nav-tabs .nav-link:hover::after {
            width: 100%;
        }

        /* Tab content transition */
        .tab-content {
            padding: 1.5rem 0;
        }

        .tab-pane {
            transition: opacity 0.3s ease;
        }

        .tab-pane.fade {
            opacity: 0;
        }

        .tab-pane.show {
            opacity: 1;
        }

        /* Buttons */
        .btn-primary {
            background-color: var(--mexigeo-primary);
            border-color: var(--mexigeo-primary);
            padding: 0.75rem 1.75rem;
            font-weight: 500;
            transition: all 0.3s ease;
            border-radius: 8px;
            color: white;
        }

        .btn-primary:hover {
            background-color: var(--mexigeo-primary-dark);
            border-color: var(--mexigeo-primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(242, 140, 116, 0.4);
            color: white;
        }

        .btn-outline-primary {
            color: var(--mexigeo-primary);
            border-color: var(--mexigeo-primary);
        }

        .btn-outline-primary:hover {
            background-color: var(--mexigeo-primary);
            color: white;
        }

        /* Sections */
        .section {
            padding: 6rem 0;
        }

        .section-title {
            position: relative;
            display: inline-block;
            margin-bottom: 2rem;
            color: var(--mexigeo-text-dark);
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 50px;
            height: 3px;
            background: var(--mexigeo-primary);
        }

        /* Cards */
        .card-hover {
            transition: all 0.3s ease;
            border: none;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            background: rgba(255, 255, 255, 0.95);
        }

        .card-hover:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        /* Testimonials */
        .testimonial-card {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            height: 100%;
            position: relative;
            border-left: 4px solid var(--mexigeo-primary);
        }

        .testimonial-quote {
            position: absolute;
            top: 20px;
            right: 20px;
            opacity: 0.1;
            font-size: 3rem;
            color: var(--mexigeo-primary);
        }

        /* Partners */
        .partner-logo {
            filter: grayscale(100%);
            opacity: 0.7;
            transition: all 0.3s ease;
            width: 100%;
            height: 64px;
            object-fit: contain;
            padding: 1rem;
        }

        .partner-logo:hover {
            filter: grayscale(0%);
            opacity: 1;
        }

        /* Stats */
        .stats-item {
            text-align: center;
            padding: 2rem;
            border-radius: 12px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(5px);
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .stats-item:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.2);
        }

        .stats-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: white;
            margin-bottom: 0.5rem;
        }

        /* Login Form */
        .login-form-wrapper {
            background-color: rgba(255, 255, 255, 0.375);
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            transition: all 0.3s ease;
            backdrop-filter: blur(8px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .password-toggle {
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .password-toggle:hover {
            opacity: 0.8;
            background-color: rgba(255, 255, 255, 0.1);
        }

        /* Demo CTA */
        .demo-cta {
            background: linear-gradient(135deg, var(--mexigeo-primary) 0%, #4C6EF5 100%);
            position: relative;
            overflow: hidden;
        }

        .demo-cta::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0.1;
        }

        /* Text Shadow */
        .text-shadow {
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.15);
        }

        /* Stat cards */
        .stat-card {
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.2) !important;
            border-color: rgba(255, 255, 255, 0.2);
        }

        /* Text visibility */
        .hero-title {
            color: #ffffff;
            font-weight: 800;
            letter-spacing: -0.02em;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }

        .hero-subtitle {
            color: rgba(255, 255, 255, 0.95);
            font-weight: 500;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        }

        /* Form labels */
        .form-label {
            color: var(--mexigeo-text-dark);
            font-weight: 500;
        }

        /* Imágenes responsivas */
        img {
            max-width: 100%;
            height: 64px;
            display: block;
        }

        /* Testimonials images */
        .testimonial-card img {
            width: 60px;
            height: 60px;
            object-fit: cover;
        }

        /* Lazy loading */
        img[data-src] {
            opacity: 0;
            transition: opacity 0.3s;
        }

        img.lazyloaded {
            opacity: 1;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .section {
                padding: 4rem 0;
            }

            #video-bg {
                opacity: 0.9;
            }
        }

        @@media (max-width: 768px) {
            h1 {
                font-size: 2rem;
            }

            h2 {
                font-size: 1.75rem;
            }

            .lead {
                font-size: 1.1rem;
            }

            #video-bg {
                display: none;
            }

            .overlay {
                background: #0d1321;
            }
        }
    </style>
</head>

<body>
    <!-- Video Background -->
    <video autoplay muted loop playsinline id="video-bg" poster="@cdn/logos/Logo_mexigeo.png">
        <source src="@cdn/video/Login_mexigeo.mp4" type="video/mp4">
        <source src="@cdn/video/Login_mexigeo.webm" type="video/webm">
    </video>
    <div class="overlay"></div>
    <div class="video-overlay"></div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="@cdn/logos/Logo_mexigeo.png" alt="MexiGeo" height="40" loading="lazy">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#inicio">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Características</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#testimonios">Testimonios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#partners">Aliados</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#precios">Planes</a>
                    </li>
                    <li class="nav-item ms-lg-3">
                        <a href="#login" class="btn btn-primary">Iniciar Sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="section d-flex align-items-center" id="inicio" style="margin-top: 50px;>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6" data-aos="fade-right">
